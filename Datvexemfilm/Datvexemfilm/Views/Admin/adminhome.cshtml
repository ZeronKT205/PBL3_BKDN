        <!-- QUAN LY VE -->
        <div class="mainPage__Booking hidden">
            <div class="mainPage__Booking-title">
                <h1>Manage Booking</h1>
            </div>
            <div class = "mainPage__Booking__Containersearch">
                <div class = "mainPage__Booking__Containersearch-date">
                    <label>Chọn Ngày</label>
                    <input type="date" class = "mainPage__Booking__Containersearch-date-input">
                </div>
                <div class = "mainPage__Booking__Containersearch-screen">
                    <label>Chọn Phòng</label>
                    <select class = "mainPage__Booking__Containersearch-screen-select">
                        <option value="0">Phòng Chiếu</option>

                    </select>
                </div>
                <div class = "mainPage__Booking__Containersearch-movie">
                    <label>Chọn Phim</label>
                    <select class = "mainPage__Booking__Containersearch-movie-select">
    
                    </select>
                </div>
                <div class="mainPage__Booking__Containersearch-button">
                    <button class = "mainPage__Booking__Containersearch-button-search"><i class="fa-solid fa-filter"></i></button>
                </div>
            </div>
            <!-- Danh Sach suat chieu -->
            <div class="mainPage__Booking__containerinfo">
                <table class="mainPage__Booking__containerinfo-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Movie</th>
                            <th>Date</th>
                            <th>Screenx</th>
