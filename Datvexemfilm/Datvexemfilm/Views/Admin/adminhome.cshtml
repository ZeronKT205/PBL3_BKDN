                            <option value="user">User</option>
                        </select>
                        <div class="addUserModal__actions">
                            <button type="submit" class="confirmAddUser">Thêm</button>
                            <button type="button" class="cancelAddUser">Hủy</button>
                        </div>
                    </form>
                </div>
            </div>
