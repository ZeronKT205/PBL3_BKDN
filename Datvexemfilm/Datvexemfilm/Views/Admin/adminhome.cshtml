    <!-- Modal Hóa Đơn -->
    <div class="invoiceModal hidden" id="invoiceModal">
        <div class="invoiceModal__content">
            <div class="invoiceModal__header">
                <h2>Hóa Đơn Vé Xem Phim</h2>
                <button class="closeInvoice"><i class="fas fa-times"></i></button>
            </div>
            <div class="invoiceModal__body">
                <div class="invoiceInfo">
                    <div class="invoiceInfo__item">
                        <span class="label">Mã Hóa Đơn:</span>
                        
                    </div>
                    <div class="invoiceInfo__item">
                        <span class="label">Ngày Đặt:</span>
                       
                    </div>
                    <div class="invoiceInfo__item">
                        <span class="label">Khách Hàng:</span>
                     
                    </div>
