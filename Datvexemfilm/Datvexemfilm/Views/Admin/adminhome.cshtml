                        <option value="0">Tất Cả Phim</option>
                        
                    </select>
                </div>
                <div class="mainPage__Shows__Containersearch-button">
                    <button class = "mainPage__Shows__Containersearch-button-search"><i class="fa-solid fa-filter"></i></button>
                    <button class = "mainPage__Shows__Containersearch-button-add"><i class="fas fa-plus"></i></button>
                </div>
            </div>
            <!-- Danh Sach suat chieu -->
            <div class="mainPage__Shows__containerinfo">
                <table class = "mainPage__Shows__containerinfo-table">
