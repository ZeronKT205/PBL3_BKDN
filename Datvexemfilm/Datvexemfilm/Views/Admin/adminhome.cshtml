    <!-- Modal Thêm Combo -->
    <div class="add-combo-modal hidden" id="addComboModal">
        <div class="add-combo-modal__overlay"></div>
        <div class="add-combo-modal__content">
            <h2>Thêm Combo Mới</h2>

            <!-- SỬ dụng id này để call api thêm combo -->
            <form id="addComboForm" class="add-combo-form">
                <div class="add-combo-form__left">
                    <label>Tên combo <span class="required">*</span></label>
                    <input type="text" name="name" id="comboName" required>
                    <label>Danh sách món</label>
                    <textarea name="items" id="comboItems" rows="2" placeholder=" 1 Bắp rang , 1 Coca Cola , 1 Snack"></textarea>
                    <label>Giá tiền (VNĐ) <span class="required">*</span></label>
                    <input type="number" name="price" id="comboPrice" min="0" required>
                    <label>URL <span class="required">*</span></label>
                    <input type="text" name="url" id="comboUrl"  required>
                    <label>Trạng thái</label>
                    <select name="status" id="comboStatus" required>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
                <div class="add-combo-form__right">
                    <label>Ảnh combo</label>
                    <div class="img-upload-area" id="imgUploadArea">
                        <span class="img-upload-placeholder" id="imgUploadPlaceholder">
                            <i class="fa-solid fa-image"></i><br>
                            Kéo & thả ảnh vào đây<br>hoặc<br>Chọn ảnh từ máy
                        </span>
                        <input type="file" accept="image/*" id="comboImgInput" hidden>
                        <img id="comboImgPreview" class="img-preview hidden" src="#" alt="Preview">
                        <button type="button" class="img-remove-btn hidden" id="imgRemoveBtn">Xóa ảnh</button>
                    </div>
                    <div class="img-choose-btn-wrapper">
                        <button type="button" class="img-choose-btn" id="imgChooseBtn">Chọn ảnh</button>
                    </div>
                </div>
                <div class="add-combo-form__actions">
                    <button type="submit" class="btn-save">Lưu combo</button>
                    <button type="button" class="btn-cancel" id="cancelAddCombo">Hủy</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal Thêm Suất Chiếu -->
    <div class="add-show-modal hidden" id="addShowModal">
        <div class="add-show-modal__content">
            <h2>Thêm Suất Chiếu Mới</h2>
            <form id="addShowForm" class="add-show-form">
                <div class="add-show-form__row">
                    <label for="showMovie">Tên Phim <span class="required">*</span></label>
                    <select id="showMovie" name="movie" required>
                        <option value="">Chọn phim</option>
                    </select>
                </div>
                <div class="add-show-form__row">
                    <label for="showScreen">Phòng Chiếu <span class="required">*</span></label>
                    <select id="showScreen" name="screen" required>
                        <option value="">Chọn phòng chiếu</option>
                    </select>
                </div>
                <div class="add-show-form__row">
                    <label for="showDate">Ngày Chiếu <span class="required">*</span></label>
                    <input type="date" id="showDate" name="date" required>
                </div>
                <div class="add-show-form__row">
                    <label for="showStartTime">Giờ Bắt Đầu <span class="required">*</span></label>
                    <input type="time" id="showStartTime" name="startTime" required>
                </div>
                <div class="add-show-form__row">
                    <label for="showEndTime">Giờ Kết Thúc <span class="required">*</span></label>
                    <input type="time" id="showEndTime" name="endTime" required>
                </div>
                <div class="add-show-form__row">
                    <label for="showPrice">Giá Vé (VND) <span class="required">*</span></label>
                    <input type="number" id="showPrice" name="price" min="0" step="1000" required>
                </div>
                <div class="add-show-form__actions">
                    <button type="submit" class="btn-save">Thêm Suất Chiếu</button>
                    <button type="button" class="btn-cancel" id="cancelAddShow">Hủy</button>
                </div>
            </form>
        </div>
    </div>
    <!-- End Modal Thêm Suất Chiếu -->

    <!-- Modal Sửa Suất Chiếu -->
    <div class="edit-show-modal hidden" id="editShowModal">
        <div class="edit-show-modal__content">
            <h2>Chỉnh Sửa Suất Chiếu</h2>
            <form id="editShowForm" class="edit-show-form">
                <input type="hidden" id="editShowId" name="id">
                <div class="edit-show-form__row">
                    <label for="editMovieTitle">Tên Phim <span class="required">*</span></label>
                    <input type="text" id="editMovieTitle" name="movie" required>
                </div>
                <div class="edit-show-form__row">
                    <label for="editScreenName">Phòng Chiếu <span class="required">*</span></label>
                    <input type="text" id="editScreenName" name="screen" required>
                </div>
                <div class="edit-show-form__row">
                    <label for="editShowDate">Ngày Chiếu <span class="required">*</span></label>
                    <input type="date" id="editShowDate" name="date" required>
                </div>
                <div class="edit-show-form__row">
                    <label for="editStartTime">Giờ Bắt Đầu <span class="required">*</span></label>
                    <input type="time" id="editStartTime" name="startTime" required>
                </div>
                <div class="edit-show-form__row">
                    <label for="editEndTime">Giờ Kết Thúc <span class="required">*</span></label>
                    <input type="time" id="editEndTime" name="endTime" required>
                </div>
                <div class="edit-show-form__row">
                    <label for="editPrice">Giá Vé (VND) <span class="required">*</span></label>
                    <input type="number" id="editPrice" name="price" min="0" step="1000" required>
                </div>
                <div class="edit-show-form__actions">
                    <button type="submit" class="btn-save">Cập Nhật Suất Chiếu</button>
                    <button type="button" class="btn-cancel" id="cancelEditShow">Hủy</button>
                </div>
            </form>
        </div>
    </div>
    <!-- End Modal Sửa Suất Chiếu -->

    <!-- Modal Quản Lý Thông Tin Phim -->
    <div class="movie-modal hidden" id="movieModal">
       <div class="movie-modal__content">
         <h2>THÔNG TIN PHIM</h2>
         <form id="movieForm" class="movie-form">
             <div class="movie-form__left">
                 <div class="movie-form__row">
                     <label for="movieTitle">Tên phim <span class="required">*</span></label>
                     <input type="text" id="movieTitle" name="name" required>
                 </div>
                 <div class="movie-form__row">
                     <label for="movieSrc">src <span class="required">*</span></label>
                     <input type="text" id="movieSrc" name="src" required>
                 </div>
                 <div class="movie-form__row">
                     <label for="moviePoster">Poster <span class="required">*</span></label>
                     <input type="text" id="moviePoster" name="poster" required>
                 </div>
                 <div class="movie-form__row">
                     <label for="movieType">Thể loại <span class="required">*</span></label>
                     <select id="movieType" name="idType" required>
                         <option value="">Chọn thể loại</option>
                         <!-- Options sẽ được thêm bằng JavaScript -->
                     </select>
                 </div>
                 <div class="movie-form__row">
                     <label for="movieRelease">Ngày công chiếu <span class="required">*</span></label>
                     <input type="date" id="movieRelease" name="releaseDay" required>
                 </div>
                 <div class="movie-form__row">
                     <label for="movieDirector">Đạo diễn <span class="required">*</span></label>
                     <input type="text" id="movieDirector" name="director" required>
                 </div>
                 <div class="movie-form__row">
                     <label for="movieCast">Diễn viên <span class="required">*</span></label>
                     <input type="text" id="movieCast" name="cast" required>
                 </div>
                 <div class="movie-form__row">
                     <label for="movieDuration">Thời lượng (phút) <span class="required">*</span></label>
                     <input type="number" id="movieDuration" name="duration" min="1" required>
                 </div>
                 <div class="movie-form__row">
                     <label for="movieLanguage">Ngôn ngữ <span class="required">*</span></label>
                     <input type="text" id="movieLanguage" name="language" required>
                 </div>
                 <div class="movie-form__row">
                     <label for="movieStatus">Trạng thái <span class="required">*</span></label>
                     <select id="movieStatus" name="status" required>
                         <option value="ON">Đang chiếu</option>
                         <option value="NEXT">Sắp chiếu</option>
                         <option value="OFF">Ngừng chiếu</option>
                     </select>
                 </div>
                 <div class="movie-form__row">
                     <label for="movieShortDesc">Mô tả ngắn <span class="required">*</span></label>
                     <textarea id="movieShortDesc" name="shortDescription" rows="3" required></textarea>
                 </div>
                 <div class="movie-form__row">
                     <label for="movieFullDesc">Mô tả chi tiết <span class="required">*</span></label>
                     <textarea id="movieFullDesc" name="fullDescription" rows="5" required></textarea>
                 </div>
                 <div class="movie-form__row">
                     <label for="movieTrailer">Link trailer <span class="required">*</span></label>
                     <input type="url" id="movieTrailer" name="trailer" required>
                 </div>

             </div>
           <div class="movie-form__right">
             <div class="movie-poster-upload" id="moviePosterUpload">
                 <img id="moviePosterPreview" src="" alt="Poster" class="movie-poster-img">
                 <input type="file" id="moviePosterInput" accept="image/*" hidden>
                 
             </div>

             <div class="movie-form__actions">
                 <button type="submit" class="btn-save">Lưu</button>
                 <button type="button" class="btn-cancel" id="cancelMovieBtn">Hủy</button>
             </div>
           </div>
         </form>
       </div>
     </div>
    <!-- End Modal Quản Lý Thông Tin Phim -->

    <!-- Modal Thông tin chi tiết User -->
    <div class="userInfoModal hidden" id="userInfoModal">
        <div class="userInfoModal__content">
            <div class="userInfoModal__header">
                <h2>Thông tin người dùng</h2>
                <button class="closeUserInfo"><i class="fas fa-times"></i></button>
            </div>
            <div class="userInfoModal__body">
                <form id="userInfoForm">
                    <div class="form-group">
                        <label for="userEmail">Email:</label>
                        <input type="email" id="userEmail" readonly>
                    </div>
                    <div class="form-group">
                        <label for="userName">Tên:</label>
                        <input type="text" id="userName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="userGender">Giới tính:</label>
                        <input type="text" id="userGender" readonly>
                    </div>
                    <div class="form-group">
                        <label for="userBirthday">Ngày sinh:</label>
                        <input type="date" id="userBirthday" readonly>
                    </div>
                    <div class="form-group">
                        <label for="userPhone">Số điện thoại:</label>
                        <input type="tel" id="userPhone" readonly>
                    </div>
                    <div class="form-group">
                        <label for="userAddress">Địa chỉ:</label>
                        <textarea id="userAddress" readonly></textarea>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
