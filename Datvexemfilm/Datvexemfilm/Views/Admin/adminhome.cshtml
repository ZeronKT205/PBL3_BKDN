    <div class="mainPage">
        <!-- WELCOME -->
        <div class="mainPage__Welcome">
            <h1><span>WELCOME</span> TO ADMIN PAGE !!</h1>
        </div>

        <!-- QUAN LY TAI KHOAN -->
        <div class="mainPage__Users hidden">
            <div class="mainPage__Users-title">
                <h1>Manage Users</h1>
            </div>
            <div class = "mainPage__Users-search">
                <button class = "searchUserBtn"><i class="fa-solid fa-magnifying-glass"></i></button>
                <input type="text" placeholder="Search Username" class="mainPage__Users-search-input">
                <button class="AddUserBtn"><i class="fa-solid fa-user-plus"></i> Thêm User</button>
            </div>
            <!-- Modal Thêm User -->
            <div class="addUserModal hidden" id="addUserModal">
                <div class="addUserModal__content">
                    <h2>Thêm User Mới</h2>
                    <form id="addUserForm">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" required>
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required>
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                        <label for="role">Role</label>
                        <select id="role" name="role" required>
