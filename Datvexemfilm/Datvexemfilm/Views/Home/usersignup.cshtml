@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zeron | Sign Up</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel = "stylesheet" href = "@Url.Content("~/Content/assets/css/loginstyle.css")">
    <link rel = "stylesheet" href = "@Url.Content("~/Content/assets/css/style.css")">
    <link rel = "stylesheet" href ="@Url.Content("~/Content/assets/css/signinstyle.css")">
</head>
<body>
    <div class="container">
        <!--NAVBAR -->
        <nav class="navbar">
            <div class="navbar__logo">
                <img src="@Url.Content("~/Content/assets/images/logo.png")" alt="logo" class="navbar__logo-item">
                <span class = "navbar__logo-name">Zeron</span>
            </div>
            <ul class="navbar__content">
                <li><a href = "#" class="navbar__content-item1">TRANG CHỦ</a></li>
                <li><a href = "#" class="navbar__content-item1">ĐẶT VÉ</a></li>
                <button class="navbar__content-btn" onclick = "goToPageLogin()">ĐĂNG NHẬP</button>
            </ul>
        </nav>
        <!--END NAVBAR -->
        <!-- Sign in -->
        <div class="mainpage">
            <div class="signup signin">
                <h2>Sign Up</h2>
                <form id="registerform" action="#" class="signup__form signin__form">
                    <input id="Username" type="text" placeholder="Username" class="signup__form-username">
                    <input id="Email" type="email" placeholder="Email" class="signup__form-email">
                    <input id="Password" type="password" placeholder ="Password" class="signup__form-password">
                    <input id="Confirm_Password"type="password" placeholder="Confirm Password" class="signup__form-repassword">
                    <button type="submit" class="signup__form-submit signin__form-submit">Submit</button>
                </form>
                <p class="signup__note signin__note">you already have an account? <a href="##" class="signup__note-link signin__note-link" onclick = "goToPageLogin2()">Sign In</a></p>
            </div>
        </div>


        <!--END Sign in -->
    </div>

    <footer>
        <div class = "container__footer">
            <h3>Ký ức đẹp bắt đầu từ một bộ phim hay!</h3>
        </div>
        <div class="footercontent">
            <div class="navbar__logo navbar__logo2">
                <img src="@Url.Content("~/Content/assets/images/logo.png")" alt="logo" class="navbar__logo-item">
                <span class = "navbar__logo-name">Zeron</span>
            </div>
            <ul class="footercontent__ContactInf">
                <li><p class = "footercontent__header">Hỗ Trợ</p></li>
                <li>
                    <div class="footercontent__ContactInf-list">
                        <i class="fa-solid fa-phone"></i>
                        <p>0948 203 816</p>
                    </div>
                </li>
                <li>
                    <div class="footercontent__ContactInf-list">
                        <i class="fa-solid fa-envelope"></i>
                        <p>zeron_cinema@gmail.com</p>
                    </div>
                </li>
                <li>
                    <div class="footercontent__ContactInf-list">
                        <i class="fa-solid fa-location-dot"></i>
                        <p>Số 16 Nguyễn Lương Bằng, Hòa Khánh Bắc, Đà Nẵng</p>
                    </div>
                </li>
            </ul>
            <ul class="footercontent__QuickLink">
                <li><p class = "footercontent__header">Liên Kết Nhanh</p></li>
                <li><a class = "footercontent__QuickLink-list" href ="##">Trang Chủ</a></li>
                <li><a class = "footercontent__QuickLink-list" href ="##">Đặt Vé</a></li>
                <li><a class = "footercontent__QuickLink-list" href ="##">Thể Loại</a></li>
            </ul>
            <ul class="footercontent__SocialMedia">
                <p class = "footercontent__header">Mạng Xã Hội</p></li>
                <div class = "footercontent__SocialMedia-list">
                    <a href="https://facebook.com" target="_blank"><i class="fa-brands fa-facebook fa-2x"></i></a>
                    <a href="https://instagram.com" target="_blank"><i class="fa-brands fa-instagram fa-2x"></i></a>
                    <a href="https://zalo.me" target="_blank"><i class="fa-solid fa-comment-dots fa-2x"></i></a>
                </div>
            </ul>
            <div><p class = "line"></p></div>
        </div>
     </footer>
     <script src="@Url.Content("~/Scripts/js/login.js")" defer></script>
     <script src="@Url.Content("~/Scripts/js/register.js")" defer></script>
</body>
</html>